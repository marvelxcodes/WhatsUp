generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique @default(uuid())
  userName String    @unique
  name     String
  about    String
  joinedOn DateTime  @default(now())
  Message  Message[]
}

model Message {
  id       String   @id @unique @default(uuid())
  sender   User
  receiver User
  body     String
  postedAt DateTime @default(now())
  userId   String
}

model Mood {
  id       String   @id @unique @default(uuid())
  postedAt DateTime @default(now())
}
